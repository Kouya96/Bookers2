

<div class= "col-xs-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>

    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>


        <!-- form_for部分 -->
    <%= form_for(@book, url:books_path) do |f| %>
    <h2>New book</h2>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinipn</h4>
    <%= f.text_area :body %>

    <nav>
        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
    </nav>
    <% end %>

</div>

</div>

  <div class= "col-xs-9">
   <h2>Books</h2>
   <table class='table table-hover table-inverse'>

   <tr>
     <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
   </tr>

   <% @books.each do |book| %>
  <%= link_to user_path(@user.id) do %>
   <tr>
   <%= image_tag book.user.get_profile_image(20,20) %>
   <% end %>
   <td><%=link_to book.title, book_path(book.id)%></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
   </table>

  </div>
</div>
