<% if @user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id) do %>
            <div class= " edit btn  btn-default btn-block" ><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
        <% end %>
        <% end %>

<% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<div class="container">
  <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

<h2>User info</h2>

<%= form_for(@user, url: user_path(current_user.id)) do |f| %>

<div class="form-group">
    <label for="user_name">Name</label>
    <br><%= f.text_field :name,class: "form-control name" %>
</div>

<div class="form-group">
    <label for="user_image">Image</label>
    <br><%= f.file_field :profile_image, accept: "image/*" %>
    <% if @user == book_path %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

<div class="form-group">
    <label for="user_introduction">introduction</label>
      <%= f.text_area :introduction,class: "form-control introduction" %>
</div>

      <!--Update　Userボタン-->
<div class="form-group">
    <p><%= f.submit 'Update User',class: "btn btn-secondary" %></p>
<% end %>
</div>

      </div>
  </div>
</div>